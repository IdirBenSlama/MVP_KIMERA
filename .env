# Kimera SWM Environment Configuration

# Database Configuration
# PostgreSQL database (docker)
DATABASE_URL=postgresql://kimera:kimera_secure_pass_2025@localhost:5432/kimera_swm
# SQLite fallback (dev only)
SQLITE_DATABASE_URL=sqlite:///./kimera_swm.db

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=password
NEO4J_ENCRYPTED=0

# API Configuration
API_HOST=localhost
API_PORT=8001

# System Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Feature Flags
LIGHTWEIGHT_EMBEDDING=0
ENABLE_JOBS=0
ENABLE_METRICS=true

# Performance Settings
MAX_CONCURRENT_THREADS=13
CACHE_TTL=300
BATCH_SIZE=100